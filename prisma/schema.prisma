  order       Int       @default(0)
  isActive    Boolean   @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  cityId      Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  
  venue       VenuePartner @relation(fields: [venueId], references: [id], onDelete: Cascade)
